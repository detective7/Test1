<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ys.mypercentsupportdemo.Main2Activity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#7700ff00"
        android:text="width:70%,height:20%"
        android:gravity="center"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="20%"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/tv1"
        android:background="#99396190"
        android:text="width:10%,height:10%"
        android:gravity="center"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="10%"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ooo"
        android:scaleType="centerCrop"
        android:layout_below="@id/tv1"
        app:layout_heightPercent="60%"
        app:layout_marginPercent="5%"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/iv1"
        android:background="#770000ff"
        android:gravity="center"
        android:text="width:100%,height:10%"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"/>

</android.support.percent.PercentRelativeLayout>
